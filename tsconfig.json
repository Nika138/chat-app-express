{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "module": "es2020",
    "target": "es2016",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
